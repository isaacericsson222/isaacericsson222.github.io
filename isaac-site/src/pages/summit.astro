          <img
            src="/styles/pngs/averageDamge.png"
            alt="Average Damage Graph"
            style="max-width: 600px; width: 100%; height: auto; display: block; margin: 0 auto;"
          />

          <p class="panel">Crit Damage</p>

          <img
            src="/styles/pngs/maxDamage.png"
            alt="Max Damage Graph"
            style="max-width: 600px; width: 100%; height: auto; display: block; margin: 0 auto;"
          />
        </div>
      </main>

      <aside class="sticky-right"></aside>
    </div>
  </div>
</Layout>

<style>
  .summit-page {
    position: relative;
    background: #d9b791;
    background-size: 200% 200%;
    animation: gradientShift 10s ease infinite;
    --banner-bleed: 40px;
    min-height: 100vh;
  }

  @keyframes gradientShift {
    0% {
      background: #d9b791;
    }
    33% {
      background: #ecb573;
    }
    66% {
      background: #bd864b;
    }
    100% {
      background: #d9b791;
    }
  }

  .mountains-banner {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 40vh;
    z-index: 1;
    overflow: hidden;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    pointer-events: none;
  }

  .mountains-img {
    width: 100%;
    height: auto;
    object-fit: cover;
    image-rendering: pixelated;
  }

  .hero--banner {
    position: relative;
    z-index: 10;
  }

  .three-column-layout {
    position: relative;
    z-index: 5;
  }

  .summit-page .sticky-left,
  .summit-page .sticky-right {
    top: calc(var(--banner-h) + 2rem);
  }

  .banner-drift {
    position: absolute;
    left: 0;
    right: 0;
    top: calc(var(--banner-bleed) * -1);
    height: calc(var(--banner-h) + var(--banner-bleed));
    overflow: hidden;
    pointer-events: none;
    z-index: 4;
  }

  .drifter {
    position: absolute;
    top: 48%;
    left: -35%;
    width: clamp(260px, 40vw, 580px);
    height: auto;
    animation: driftAcross 500s linear infinite;
    image-rendering: pixelated;
  }

  .drifter--b {
    top: -10%;
    animation-delay: -125s;
  }

  .drifter--c {
    top: 48%;
    animation-delay: -250s;
  }

  .drifter--d {
    top: -10%;
    animation-delay: -375s;
  }

  @keyframes driftAcross {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(160vw);
    }
  }

  @media (max-width: 480px) {
    .banner-drift {
      height: calc(var(--banner-h) * 0.6);
    }
    .drifter {
      width: clamp(180px, 30vw, 300px);
    }
  }
</style>

<script>
  import "../scripts/terminal.js";
</script>
