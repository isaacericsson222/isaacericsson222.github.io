<style>
  .fortune-page {
    position: relative;
    background: #000;
    --bleed: 80px;
  }

  .parallax {
    position: relative;
    min-height: 100vh;
    overflow: hidden;
  }

  .layer {
    position: absolute;
    inset: calc(var(--bleed) * -1);
    pointer-events: none;
    will-change: transform;
    background-image: url("/styles/gifs/stars.gif");
    background-repeat: repeat;
    background-size: 650px 650px;
    image-rendering: pixelated;
    transform-origin: center;
  }

  .bg-back {
    z-index: 0;
    opacity: 0.18;
    filter: blur(2px) brightness(0.7) saturate(0.8);
    --extra-transform: rotate(180deg) scale(1.12);
  }

  .bg-mid {
    z-index: 1;
    opacity: 0.35;
    filter: blur(1px) brightness(0.9);
    --extra-transform: rotate(90deg) scale(1.06);
  }

  .bg-front {
    z-index: 2;
    opacity: 0.75;
    mix-blend-mode: screen;
    --extra-transform: none;
  }

  .fortune-page .hero {
    position: relative;
    z-index: 5;
  }
</style>

<script>
  import "../scripts/terminal.js";
  import "../scripts/parallax.js";
</script>
