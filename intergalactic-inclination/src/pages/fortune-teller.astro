---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Map">
  <div class="fortune-page dark">
    <div class="parallax" data-parallax>
      <div class="layer bg-back" data-depth="0.10"></div>
      <div class="layer bg-mid" data-depth="0.30"></div>
      <div class="layer bg-front" data-depth="0.60"></div>

      <div class="page-background"></div>

      <main class="hero hero--banner">
